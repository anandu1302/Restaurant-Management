<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="5dp">
            
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/cFoodImageView"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:padding="8dp"
                android:src="@drawable/logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/cDeleteImageView"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/delete"
                android:layout_gravity="end"
                android:layout_marginRight="5dp" />

            <TextView
                android:id="@+id/cItemNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Item Name"
                android:textSize="18dp"
                android:fontFamily="@font/roboto_regular"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/cSubItemImageView"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_sub"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/cItemQuantityTextView"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text="1"
                    android:textSize="16dp"
                    android:gravity="center" />

                <ImageView
                    android:id="@+id/cAddItemImageView"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_add"
                    android:layout_gravity="center"/>


            </LinearLayout>

            <TextView
                android:id="@+id/cItemPriceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹ 100"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginRight="10dp"
                android:textColor="@color/text_black"
                android:layout_gravity="end"
                android:gravity="center" />



        </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>